<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"

    >

    <com.mes.glideimageview.GlideImageView
        android:id="@+id/itemImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:siv_border_color="@color/white"
        app:siv_border_width="1dp"
        app:siv_pressed_alpha="0"
        app:siv_pressed_color="@color/white"
        app:siv_shape_type="circle"
    />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemImage"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_464646"/>
</RelativeLayout>